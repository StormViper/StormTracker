<div id="user-form" align="center">
<h2 id="user-header">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="user-email">
    <%= f.label :email, id: "user-label" %><br />
    <%= f.email_field :email, autofocus: true, id: "user-textbox" %>
  </div>

  <div class="user-password">
    <%= f.label :password, id: "user-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", id: "user-textbox" %>
  </div>

  <div class="user-confirm">
    <%= f.label :password_confirmation, id: "user-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", id: "user-textbox" %>
  </div>

  <div class="user-confirm">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>