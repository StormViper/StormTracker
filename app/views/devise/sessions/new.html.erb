<div id="user-form" align="center">
<h2 id="user-header">Log in</h2>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, id: "user-label" %><br />
    <%= f.email_field :email, autofocus: true, id: "user-textbox" %>
  </div>

  <div class="field">
    <%= f.label :password, id: "user-label" %><br />
    <%= f.password_field :password, autocomplete: "off", id: "user-textbox" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, id: "user-textbox" %>
      <%= f.label :remember_me, id: "user-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
